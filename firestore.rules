rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own health records
    match /healthRecords/{recordId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Allow users to create share links for their own data.
    // Allow anyone with the link to read the share document.
    match /shares/{shareId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow write: if false; // Disallow updates and deletes for now.
    }
  }
}
